@model SV20T1080033.DomainModels.Customer;

@{

}

<div class="box box-primary">

    <div class="box-body">

        <form action="~/Admin/Customer/Delete/@Model.CustomerID" method="post">
            <div class="form-group">
                <label>Tên khách hàng</label>
                <p class="form-control-static" name="@nameof(Model.CustomerName)" style="border-bottom:1px dotted #000">@Model.CustomerName</p>
            </div>
            <div class="form-group">
                <label>Tên giao dịch:</label>
                <p class="form-control-static" name="@nameof(Model.ContactName)" style="border-bottom:1px dotted #000">@Model.ContactName</p>
            </div>
            <div class="form-group">
                <label>Địa chỉ:</label>
                <p class="form-control-static" name="@nameof(Model.Address)" style="border-bottom:1px dotted #000">@Model.Address</p>
            </div>
            <div class="form-group">
                <label>Tỉnh thành:</label>
                <p class="form-control-static" name="@nameof(Model.Province)" style="border-bottom:1px dotted #000">@Model.Province</p>
            </div>
            <div class="form-group">
                <label>Điện thoại:</label>
                <p class="form-control-static" name="@nameof(Model.Phone)" style="border-bottom:1px dotted #000">@Model.Phone</p>
            </div>
            <div class="form-group">
                <label>Email:</label>
                 <p class="form-control-static" name="@nameof(Model.Email)" style="border-bottom:1px dotted #000">@Model.Email</p
            </div>

            <button type="submit" class="btn btn-danger">
                <i class="fa fa-remove"></i>
                Xóa dữ liệu
            </button>

            <button type="submit" class="btn btn-default">
                <a href="~/Admin/Customer">
                    Quay lại
                </a>

            </button>
        </form>

    </div>
</div>

