@model SV20T1080033.DomainModels.Customer;
@using SV20T1080033.Web;

<div class="box box-primary">
    <div class="box-body">

        @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
        {
            <div class="alert alert-warning">
                <p>@ViewBag.ErrorMessage</p>
            </div>
        }
        <form action="~/Admin/Customer/Save" method="post">
            @Html.HiddenFor(m=> m.CustomerID)
            @* giống cái trên, nhưng tự đông đổi tên <input type="hidden" name="@nameof(Model.CustomerID)" value="@Model.CustomerID" /> *@
            <div class="form-group">
                <label>Tên khách hàng:</label>
                @Html.TextBoxFor(m=>m.CustomerName,new{@class="form-control",@autofocus="autofocus"})
               @*the same:  <input type="text" name="@nameof(Model.CustomerName)" value="@Model.CustomerName" class="form-control" autofocus> *@
                @Html.ValidationMessageFor(m=>m.CustomerName,"",new {@style="color:#f00"})
            </div>
            <div class="form-group">
                <label>Tên giao dịch:</label>
                @Html.TextBoxFor(m=>m.ContactName,new{@class="form-control"})
                @Html.ValidationMessageFor(m=>m.ContactName,"",new {@style="color:#f00"})
              @*   <input type="text" name="@nameof(Model.ContactName)" value="@Model.ContactName" class="form-control"> *@
            </div>
            <div class="form-group">
                <label>Tỉnh thành:</label>
                @Html.DropDownListFor(m=> m.Province, SelectListHelper.Provinces(),new {@class="form-control"})
                @Html.ValidationMessageFor(m=>m.Province,"",new {@style="color:#f00"})
               @*  <select class="form-control" name="@nameof(Model.Province)">
                    @foreach (var item in SV20T1080033.BusinessLayer.CommonDataService.ListOfProvinces())
                    {
                        if (item.ProvinceName == Model.Province)
                        {
                            <option value="@item.ProvinceName" selected>@item.ProvinceName</option>
                        }
                        else
                        {
                            <option value="@item.ProvinceName">@item.ProvinceName</option>
                        }
                    }
                </select> *@
            </div>
            <div class="form-group">
                <label>Địa chỉ:</label>
                @Html.TextBoxFor(m=>m.Address,new{@class="form-control"})
                @Html.ValidationMessageFor(m=>m.Address,"",new {@style="color:#f00"})
               
            </div>
            <div class="form-group">
                <label>Số điện thoại:</label>
                @Html.TextBoxFor(m=>m.Phone,new{@class="form-control"})
                @Html.ValidationMessageFor(m=>m.Phone,"",new {@style="color:#f00"})
               
            </div>
            <div class="form-group">
                <label>Địa chỉ Email:</label>
                @Html.TextBoxFor(m=>m.Email,new{@class="form-control"})
                @Html.ValidationMessageFor(m=>m.Address,"",new {@style="color:#f00"})
            </div>
            <button type="submit" class="btn btn-primary">
                <i class="fa fa-floppy-o"></i> Lưu dữ liệu
            </button>
            <a href="~/Admin/Customer/Index" class="btn btn-default">Quay lại</a>
           @*báo lỗi tổng:  @Html.ValidationSummary("",new{@style="color:#f00"}) *@

        </form>
    </div>
</div>