@using SV20T1080033.Web;
@using SV20T1080033.Web.AppCodes;
@model SV20T1080033.Web.Models.PaginationSearchOrderDetail
@{
    Layout = null;
}

<div class="modal-dialog">
    <div class="modal-content">
        <form action="~/Admin/Order/Shipping/{id}" method="post">
            <div class="modal-header bg-primary">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Cập nhật chi tiết đơn hàng</h4>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label class="control-label">Người giao hàng:</label>
                    <div class="col-sm-10">
                        @Html.ValidationMessageFor(m => m.shipperID )
                        @Html.DropDownListFor(m => m.shipperID, SelectListHelper.Shippers(), new { @class="form-control"})
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="submit" class="btn btn-primary">
                    <i class="fa fa-floppy-o"></i> Cập nhật
                </button>
                <button type="button" class="btn btn-default" data-dismiss="modal">
                    Bỏ qua
                </button>
            </div>
        </form>
    </div>
</div>

