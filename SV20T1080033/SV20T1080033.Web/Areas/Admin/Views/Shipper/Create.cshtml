@model SV20T1080033.DomainModels.Shipper;

<div class="box box-primary">
    <div class="box-body">
        <form action="~/Admin/Shipper/Save" method="post">
            @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
            {
                <div class="alert alert-warning">
                    <p>@ViewBag.ErrorMessage</p>
                </div>
            }
            <input type="hidden" name="@nameof(Model.ShipperID)" value="@Model.ShipperID" />
            <div class="form-group">
                <label>Tên khách hàng:</label>
                <input type="text" name="@nameof(Model.ShipperName)" value="@Model.ShipperName" class="form-control" autofocus>
            </div>
            <div class="form-group">
                <label>Số điện thoại:</label>
                <input type="text" name="@nameof(Model.Phone)" value="@Model.Phone" class="form-control">
            </div>
            
            <button type="submit" class="btn btn-primary">
                <i class="fa fa-floppy-o"></i> Lưu dữ liệu
            </button>
            <a href="~/Admin/Shipper/Index" class="btn btn-default">Quay lại</a>
        </form>
    </div>
</div>