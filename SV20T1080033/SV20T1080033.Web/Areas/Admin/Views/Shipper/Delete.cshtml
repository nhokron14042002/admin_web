@model SV20T1080033.DomainModels.Shipper;

@{

}

<div class="box box-primary">

    <div class="box-body">

        <form action="~/Admin/Shipper/Delete/@Model.ShipperID" method="post">
            <div class="form-group">
                <label>Tên khách hàng</label>
                <p class="form-control-static" name="@nameof(Model.ShipperName)" style="border-bottom:1px dotted #000">@Model.ShipperName</p>
            </div>
            <div class="form-group">
                <label>Số điện thoại:</label>
                <p class="form-control-static" name="@nameof(Model.Phone) style="border-bottom:1px dotted #000">@Model.Phone</p>
            </div>
            
            <button type="submit" class="btn btn-danger">
                <i class="fa fa-remove"></i>
                Xóa dữ liệu
            </button>

            <button type="submit" class="btn btn-default">
                <a href="~/Admin/Shipper">
                    Quay lại
                </a>

            </button>
        </form>

    </div>
</div>

